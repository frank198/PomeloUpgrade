{
  "name": "pomelo-upgrade",
  "version": "3.2.3",
  "description": "网易Pomelo升级版本",
  "private": false,
  "homepage": "https://github.com/frank198/pomelo-upgrade#readme",
  "scripts": {
    "test": "grunt"
  },
  "bugs": {
    "url": "https://github.com/frank198/pomelo-upgrade/issues"
  },
  "repository": "https://github.com/frank198/pomelo-upgrade.git",
  "license": "MIT",
  "keywords": [
    "pomelo",
    "framework",
    "game",
    "web",
    "server",
    "pomelo-upgrade"
  ],
  "bin": {
    "pomelo": "./bin/pomelo"
  },
  "dependencies": {
    "colors": "^1.x",
    "commander": "^7.x",
    "crc": "^3.x",
    "mqtt": "^4.x",
    "node-bignumber": "^1.x",
    "node-schedule": "^1.x",
    "pomelo-admin-upgrade": "^3.x",
    "pomelo-loader-upgrade": "^0.0.2",
    "pomelo-logger-upgrade": "^2.x",
    "pomelo-protobuf": "^0.4.0",
    "pomelo-protocol": "^0.1.6",
    "pomelo-rpc-upgrade": "^3.x",
    "socket.io": "^4.x",
    "ws": "^7.x"
  },
  "devDependencies": {
    "blanket": "*",
    "eslint": "*",
    "grunt": "*",
    "grunt-contrib-clean": "*",
    "grunt-eslint": "*",
    "grunt-mocha-test": "*",
    "load-grunt-tasks": "*",
    "mocha": "*",
    "muk": "*",
    "should": "*",
    "socket.io-client": "*"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "comma-style": "error",
      "consistent-this": [
        "error",
        "_this"
      ],
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1,
          "VariableDeclarator": 2
        }
      ],
      "keyword-spacing": "error",
      "no-buffer-constructor": "warn",
      "no-console": "off",
      "no-multi-spaces": "error",
      "func-call-spacing": "error",
      "no-trailing-spaces": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "space-before-blocks": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-infix-ops": "error",
      "space-unary-ops": "error",
      "no-var": "warn",
      "prefer-const": "warn",
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
